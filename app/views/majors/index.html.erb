<h1>Majors</h1>
<!-- jQuery -->
</br>
<table id="universities" class="table table-striped table-bordered" style="margin-left:20px;">
<thead>
  <tr>
    <th>Name</th>
    <th>Level</th>
    <th>Category</th>
  </tr>
</thead>
<tbody>
<% @majors.each do |major| %>
    <tr>
      <td><%= link_to major.name, major %></td>
      <td><%= major.level %></td>
      <td><%= major.category %></td>
    </tr>
  <% end %>
</tbody>
</table>

   <% if can? :edit, @major %>
    <td><%= link_to 'Edit', edit_major_path(major) %></td> 
    <td><%= link_to 'Destroy', major, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
    <% end %>

<br />
 <% if can? :create, @major %>
<%= link_to 'New Major', new_major_path %>
 <% end %>